<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/input_text"
                android:id="@+id/input_text"
                android:textSize="28sp"
                android:layout_marginTop="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_input"
                android:layout_width="115dp"
                android:layout_height="80dp"
                android:layout_marginTop="29dp"
                android:layout_marginStart="80dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:padding="5dp" />
        </FrameLayout>

        <EditText
            android:id="@+id/input_text_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/default_input_text"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="-20sp"
            android:background="@drawable/text_box_border" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <TextView
                android:text="@string/output_text"
                android:id="@+id/output_text"
                android:textSize="28sp"
                android:layout_marginTop="60sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_target"
                android:layout_width="115dp"
                android:layout_height="80dp"
                android:layout_marginTop="39dp"
                android:layout_marginStart="80dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:padding="5dp" />

            <Button
                android:id="@+id/voice_translate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginStart="134dp"
                android:singleLine="false"
                android:text="@string/button_voice_translate"
                android:textSize="32sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/output_text_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:hint="@string/default_output_text"
            android:textSize="18sp"
            android:layout_marginTop="-20sp"
            android:background="@drawable/text_box_border" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <Button
                android:id="@+id/result_explain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_result_explain"
                android:textSize="32sp"
                android:layout_marginStart="0dp"/>

            <Button
                android:id="@+id/finish_app_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_finish_app"
                android:singleLine="false"
                android:textSize="32sp"
                android:layout_gravity="end"
                android:layout_marginStart="0dp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>