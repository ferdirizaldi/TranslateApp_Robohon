<?xml version="1.0" ?>
<hvml version="2.0">
    <head>
        <producer>jp.co.sharp.translate.app</producer>
        <description>英単語を発話するシナリオ</description>
        <scene value="jp.co.sharp.translate.app.scene_common"/>
        <version value="1.0"/>
        <accost priority="73" topic_id="t1" word="jp.co.sharp.translate.app.speak_explanation"/>
    </head>
    <body>
        <topic id="t1" listen="false">
            <action index="1">
                <control function="change_lang_to_target" target="jp.co.sharp.translate.app"/>
            </action>
            <action index="2">
                <speech>${memory_p:jp.co.sharp.translate.app.translated_word}</speech>
                <behavior id="assign" type="normal"/>
            </action>
            <action index="2">
                <control function="change_lang_to_jp" target="jp.co.sharp.translate.app"/>
            </action>
            <action index="2">
                <speech>を日本語で説明するね！${memory_p:jp.co.sharp.translate.app.explanation_words}</speech>
                <behavior id="assign" type="normal"/>
            </action>
        </topic>
    </body>
</hvml>
